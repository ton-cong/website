<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.repository.OrderRepository">

    <resultMap id="OrderResultMap" type="com.example.demo.entity.Order">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="fullName" column="full_name"/>
        <result property="phone" column="phone"/>
        <result property="address" column="address"/>
        <result property="note" column="note"/>
        <result property="totalPrice" column="total_price"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <collection property="items" ofType="com.example.demo.entity.OrderItem">
            <id property="id" column="oi_id"/>
            <result property="orderId" column="oi_order_id"/>
            <result property="productId" column="oi_product_id"/>
            <result property="quantity" column="oi_quantity"/>
            <result property="price" column="oi_price"/>
            <association property="product" javaType="com.example.demo.entity.Product">
                <id property="id" column="p_id"/>
                <result property="name" column="p_name"/>
                <result property="imageUrl" column="p_image_url"/>
            </association>
        </collection>
    </resultMap>

    <sql id="selectOrderWithItems">
        SELECT o.*,
               oi.id AS oi_id, oi.order_id AS oi_order_id, oi.product_id AS oi_product_id,
               oi.quantity AS oi_quantity, oi.price AS oi_price,
               p.id AS p_id, p.name AS p_name, p.image_url AS p_image_url
        FROM orders o
        LEFT JOIN order_items oi ON o.id = oi.order_id
        LEFT JOIN products p ON oi.product_id = p.id
    </sql>

    <select id="findById" parameterType="int" resultMap="OrderResultMap">
        <include refid="selectOrderWithItems"/>
        WHERE o.id = #{id}
    </select>

    <select id="findByUserId" parameterType="int" resultMap="OrderResultMap">
        <include refid="selectOrderWithItems"/>
        WHERE o.user_id = #{userId}
        ORDER BY o.created_at DESC
    </select>

    <select id="findAll" resultMap="OrderResultMap">
        <include refid="selectOrderWithItems"/>
        ORDER BY o.id DESC
    </select>

    <select id="findAllPaged" resultMap="OrderResultMap">
        SELECT o_page.*,
               oi.id AS oi_id, oi.order_id AS oi_order_id, oi.product_id AS oi_product_id,
               oi.quantity AS oi_quantity, oi.price AS oi_price,
               p.id AS p_id, p.name AS p_name, p.image_url AS p_image_url
        FROM (
            SELECT * FROM orders
            ORDER BY ${sortBy} ${sortDir}
            LIMIT #{limit} OFFSET #{offset}
        ) o_page
        LEFT JOIN order_items oi ON o_page.id = oi.order_id
        LEFT JOIN products p ON oi.product_id = p.id
    </select>

    <select id="count" resultType="long">
        SELECT COUNT(*) FROM orders
    </select>

    <insert id="insert" parameterType="com.example.demo.entity.Order" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO orders (user_id, full_name, phone, address, note, total_price, status)
        VALUES (#{userId}, #{fullName}, #{phone}, #{address}, #{note}, #{totalPrice}, #{status})
    </insert>

    <update id="save" parameterType="com.example.demo.entity.Order">
        UPDATE orders SET
            full_name = #{fullName},
            phone = #{phone},
            address = #{address},
            note = #{note},
            total_price = #{totalPrice},
            status = #{status}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM orders WHERE id = #{id}
    </delete>

</mapper>
